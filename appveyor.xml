version: 1.0.{build}
branches:
  only:
  - main
configuration: Release
install:
- cmd: >-
    git submodule update --init --recursive

    nuget restore HerbieV.sln
build:
  project: HerbieV.sln
  verbosity: minimal
after_build:
- cmd: >-
    7z a HerbieV.zip %APPVEYOR_BUILD_FOLDER%\HerbieV\bin\Release\*

    appveyor PushArtifact HerbieV.zip
